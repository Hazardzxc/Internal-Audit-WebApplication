@model STD.Models.DB.Schedule
@using STD.Models.DB;
@{
    Layout = null;
    ViewData["Title"] = Model != null ? $"เพิ่มกำหนดการ" : "แก้ไขกำหนดการ";
}

<div class="row">
    @if (Model != null && Model.ScheduleId > 0)
    {
        <input type="hidden" id="ScheduleID" name="ScheduleID" value="@Model.ScheduleId">
    }
   <div class="col-md-12">
        <div class="form-group">
            <label>รายละเอียดการปฏิบัติงาน</label>
            <textarea id="ScheduleDetail" name="ScheduleDetail" class="form-control" rows="5" required>@(Model != null && !string.IsNullOrEmpty(Model.ScheduleDetail) ? Model.ScheduleDetail : "")</textarea>
        </div>
        <div class="form-group">
            <label>เอกสารที่ขอให้จัดเตรียม</label>
            <input type="text" class="form-control" id="ScheduleDoc" name="ScheduleDoc" required value="@(Model != null && !string.IsNullOrEmpty(Model.ScheduleDoc) ? Model.ScheduleDoc : "")">
        </div>
        <div class="form-group">
            <label>วันที่</label>
            <input type="date" class="form-control" id="ScheduleDate" name="ScheduleDate" required value="@(Model != null && !string.IsNullOrEmpty(Model.ScheduleDate.ToString()) ? Model.ScheduleDate.ToString("yyyy-MM-dd") : "")">
        </div>
        <div class="form-group">
            <label>เวลา</label>
            <input type="time" class="form-control" id="ScheduleTime" name="ScheduleTime" required value="@(Model != null && !string.IsNullOrEmpty(Model.ScheduleTime.ToString()) ? Model.ScheduleTime.ToString("HH:mm") : "")">
        </div>
   </div>
</div>